<header class="headSec">
      
       <h1>Yellow Bellies</h1>
       
       

       <ul>
         <li><%= link_to "Home", "/" %></li>
         <li><%= link_to "Profile", profile_path %></li>
         <li><%= link_to "Product Catalogue", products_path %></li>
         <li><%= link_to "View Cart", "/cart" %></li>
         <li><%= link_to "View Orders", orders_path %></li>
         <li><%= link_to "Checkout", checkout_path %></li>
         
         <% if user_signed_in? %>

           <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
           <li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
         <% else %>
           <li><%= link_to 'Register', new_user_registration_path %></li>
           <li><%= link_to 'Sign in', new_user_session_path %></li>
         <% end %>

         
        
        <% if session[:login] == 1 %>
         <li><%= link_to "Admin Logout", logout_path %></li>
        <% else %>
        
         <li><%= link_to "Admin Login", login_path %></li>
        <% end %>
       </ul>

    </header>